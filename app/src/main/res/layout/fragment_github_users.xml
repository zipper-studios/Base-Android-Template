<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.base_android_template.feature.github_users.GithubUsersViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:id="@+id/github_users_description_text"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/github_users_list_description"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_sixteen"
            android:fontFamily="@font/lato_regular"
            android:padding="@dimen/spacing_sixteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/github_users_recycler_view"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="@dimen/match_constraint"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/spacing_sixteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:adapter="@{viewModel.githubUsersListAdapter}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/github_users_description_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>